<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.trojx.androidhaloview.MainActivity">

    <com.trojx.androidhaloview.HaloBackground
        android:id="@+id/halo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:halo_amount="8"
        app:halo_scale="6"
        app:halo_width_out="5dp"
        app:halo_width_in="1dp"
        app:halo_radius="50dp"
        app:halo_color="@color/colorAccent"
        app:halo_duration="4000" />

</RelativeLayout>
